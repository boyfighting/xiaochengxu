@import "../../component/ripples.wxss";
.stationList{
  background-color: white;
  min-height: 100%;
}
.stationWraper{
  display: flex;
  flex-wrap:wrap;
  justify-content: flex-start;
  align-items: center;
}
.station{
  width: 170rpx;
  /* height: 270rpx; */
  text-align: center;
  padding: 40rpx;
  padding-bottom: 0;
}
.provinces{
  width:186rpx;
  text-align:center;
  padding-bottom:0;
  margin-top:18px;
}
.provincesBorder{
  width:100rpx;
  padding:6px 8px;
  font-size:28rpx;
  color:#666;
  border:1px solid gray;
  border-radius:4px;
  display:inline-block;
}
.cover{
  width: 100%;
  height: 170rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  overflow: hidden;
}
.img{
   width: 100%; 
   height: 100%;
}
.stationName{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
  min-height: 60rpx;
}
.stationTitle{
  margin-top: 14px;
  margin-bottom: 6px;
  color: #999;
  font-size: 26rpx;
  text-align: center;
  width: 100%;
}
.text2over{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
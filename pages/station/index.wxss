}

.trendsText{
  padding: 20rpx 10rpx;
  background-color: #f8f8f8;
  font-size:26rpx;
  color:#333;
  margin-bottom:4px;
}

.headlogo{
  width:48rpx;
  height:48rpx;
  vertical-align:sub;
  margin-right:8px;
}

.trendsLogoHead{
  margin-bottom: 28rpx;
}

.fontBold{

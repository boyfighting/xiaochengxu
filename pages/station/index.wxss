}

.radio-group {
    width: 100%;
    padding: 5px 5px 0 5px;
}
.radio {
    display: block;
    border-bottom: 1px solid #ddd;
    padding: 6px;
}

.voteWraper {
  padding: 0 16px 10px 4px;
  background: #f2f2f2;
  border-radius: 4px;
  margin-bottom:10px;
}

.voteBtn {
  text-align:center;

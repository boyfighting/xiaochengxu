page{
  background-color:#f0eff4;
  height:100%;
}

.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    background-color: white;
    text-align: center;
    height: 8vh;
    font-size: 30rpx;
    line-height: 8vh;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    margin:0 70rpx;
    width: 48%; 
    color:#434343;
}
.active{
    color:#EF6E35;
    border-bottom: 4rpx solid #EF6E35;
}
swiper{
  height: 91vh;
}

.TrendsWraper{
  margin-top: 16rpx;
}
.Trends {
  background: #fff; 
}

.trendsFrom {
  padding: 28rpx 28rpx 20rpx 28rpx;
  display: flex;
}
.user {
  display: flex;
}
.user-info {
  margin-left: 20rpx;
  width: 520rpx;
  /* width: 490rpx */
}
.user image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f8f8f8;
}
.uesername {
  font-size: 32rpx;
}

.trendsPubTime {

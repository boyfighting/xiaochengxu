}

.video {
  padding:0 24rpx;
  margin-bottom: 20rpx;
}
.songWraper {
  padding:20rpx ;
  background: #f2f2f2;
  display: flex;
  align-items: center;
  margin-bottom:10px;
}

.songImageWraper {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
}

.songImageWraper image {

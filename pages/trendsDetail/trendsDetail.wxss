   margin-top: 20rpx;
   background: #fff;
   margin-bottom: 70rpx;
   height: auto;
}

.commentTitle {
  font-size: 32rpx;
  color: rgba(0,0,0,.65);
  border-bottom: 1px solid #e2e1e6;
  padding: 24rpx;
}

.commentItem{
  border-bottom: 1px solid #e2e1e6;
  padding-bottom: 10px;
}
.commentWraper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: rgba(0,0,0,.65);
  font-size: 28rpx;
  padding: 26rpx;
}

.commentImg .user {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}

.commentUser{
  width: 500rpx;
  margin-left: 16rpx;
}
.commentUser .commentName {
  font-size: 32rpx;
  color: rgba(0,0,0,.85);
}

.commentUser .publicTime{
  color: rgba(0,0,0,.5);
  font-size: 22rpx;
}

.commentZan{
  width: 130rpx;
  text-align: center;
  color: #8a8a8a;
}

.commentZan .commentZanImg{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.commentBody{
  color: rgba(0,0,0,.75);
  font-size: 32rpx;
  padding: 8px 10px 12px 16px;
}

.replies{
  margin: 0px 10px 0px 16px;
  padding: 10px 8px 10px 6px;
  color: rgba(0,0,0,.75);
  border-bottom: 1px solid #e2e1e6;
  font-size: 32rpx;
  border-radius: 2px;
  background-color: #eaeaea;
}

.replyUser{
  color: rgb(6, 156, 250);
}
.replyDesc{
  font-size: 30rpx;
}

.oprate {
  display: flex;
  border-top:1px solid #e2e1e6;
  position: fixed;
  bottom: 0;
  left: 0; 
  width: 100%;
  background: #fff;
} 
.oprate view {
  width: 33.3333%;
  font-size: 32rpx;
  text-align: center;
}

.popup-example--center {
  border-radius: 4px;
}

.bottombtn{
  font-size: 28rpx;
}

.inputClass {
  color: #aeaeae;
  font-size: 28rpx;
}

.sendComment{
  font-size:28rpx;
  height:70rpx;
  border-radius: 4px;
  width:94%;
  padding:0 3%;
  background-color: #eaeaea;
}

.zanIcon {
  width: 50rpx;
  height: 50rpx;
  vertical-align: sub;
  margin-bottom: -3px;
}

.commentIcon {
  width: 48rpx;
  height: 48rpx;
  vertical-align: sub;
  margin-bottom: -3px;
}

.shareIcon{
  width: 48rpx;
  height: 48rpx;
  vertical-align:middle;
  margin-bottom:4px;
}

.popup-example--right .zan-popup__container {
  top: 0;
  bottom: 0;
}

.popup-example--left .zan-popup__container {
  top: 0;
  bottom: 0;
}

.popup-example--top .zan-popup__container {
  left: 0;
  right: 0;
  padding: 15px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 16px;
}
.popup-example--top .zan-popup__mask {
  opacity: 0;
}

.popup-example--bottom .zan-popup__container {
  left: 0;
  right: 0;
}

.popup-example--bottom .zan-popup__container .zan-btns {
  margin: 10px;
}

